{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./server/*"],
      "@/lib/*": ["./app/lib/*"],
      "@/components/*": ["./app/components/*"],
      "@/components/ui/*": ["./app/components/ui/*"],
      "@/assets/*": ["./app/assets/*"],
      "@/hooks/*": ["./app/hooks/*"],
      "@/types/*": ["./types/*"],
      "@/utils/*": ["./app/utils/*"]
    },
  },
  "include": ["app.config.ts"]
}
